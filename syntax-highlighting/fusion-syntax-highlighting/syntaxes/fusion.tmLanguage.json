{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Fusion",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.fusion",
				"match": "\\b(if|else|elseif|while|until|dowhile|dountil|fn|int|string|double|bool|var|long|size|char|public|const|break|continue|import|include|for|return)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.fusion",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.fusion",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"patterns": [{
				"name": "keyword.other.unit.suffix.integer.fusion",
				"match": "(^-?[0-9][0-9\\.]+$)"
			}]
		}
	},
	"scopeName": "source.fusion"
}
