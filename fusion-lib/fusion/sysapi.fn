proc is_linux()
    if (system("uname -r > nul") == 0)
        remove("nul");
        return 1;
    end
    return 0;
end

proc shutdown()
    if (is_linux())
        system("poweroff");
        return;
    end
    system("shutdown -s -t 0");
    return;
end

proc restart()
    if (is_linux())   
        system("reboot");
        return;
    end
    system("shutdown -r -t 0");
    return;
end