proc is_linux()
{
    if (system("uname -r > nul") == 0)
    {
        remove("nul");
        return 1;
    };
    return 0;
};

proc shutdown()
{
    if (is_linux())
    {
        system("poweroff");
        return;
    };
    system("shutdown -s -t 0");
    return;
};

proc restart()
{
    if (is_linux())
    {
        system("reboot");
        return;
    };
    system("shutdown -r -t 0");
    return;
};